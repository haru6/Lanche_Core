@model CartBuyViewModel

<div class="row checkoutForm">
    
    <img src="~/images/Full-Cart-icon.png" />
    <div>
        <h4> Seu carrinho de compras : </h4>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.cartBuy.CartBuyItems)
            {
                <tr>
                    <td class="text-center">@item.Amount</td>
                    <td class="text-left">@item.snack.Name</td>
                    <td class="text-right">@item.snack.Price.ToString("c")</td>
                    <td class="text-right">
                        @((item.Amount * item.snack.Price).ToString("c"))
                    </td>
                    <td class="text-center">
                        <a asp-controller="CartBuy" asp-action="RemoveItemCartBuy" asp-route-Id="@item.snack.Id"><img src="~/images/delete.png" /></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.cartBuyTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            <p class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Adicionar mais lanches<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menuitem">
                    <li>
                        <a asp-controller="Snack" asp-action="List" asp-route-category="Normal">
                            <b>Normal</b>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Snack" asp-action="List" asp-route-category="Natural">
                            <b>Natural</b>
                        </a>
                    </li>
                </ul>
            </ p>
        </div>
    </div>
</div>

